<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".feature.about.AboutFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="50dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="100dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="16dp">

            <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/profile_student"/>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About Developer"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/colorBlack"
                        android:id="@+id/tvTitle"
                        android:fontFamily="@font/roboto_condensed_bold"
                        android:textSize="16sp"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name"
                        android:layout_below="@id/tvTitle"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/roboto_condensed_bold"
                        android:textSize="14sp"
                        android:textColor="@color/colorBlack"
                        android:id="@+id/tvName"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Raka Permana Putra"
                        android:fontFamily="@font/roboto_condensed_regular"
                        android:textSize="14sp"
                        android:layout_below="@id/tvTitle"
                        android:layout_marginTop="30dp"
                        android:id="@+id/tvUsername"
                        android:layout_alignParentRight="true"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/npm"
                        android:layout_below="@id/tvName"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/roboto_condensed_bold"
                        android:textSize="14sp"
                        android:textColor="@color/colorBlack"
                        android:id="@+id/tvNpm"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/npm_user"
                        android:fontFamily="@font/roboto_condensed_regular"
                        android:textSize="14sp"
                        android:layout_below="@id/tvUsername"
                        android:layout_marginTop="16dp"
                        android:id="@+id/tvNpmUser"
                        android:layout_alignParentRight="true"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/email_text"
                        android:layout_below="@id/tvNpm"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/roboto_condensed_bold"
                        android:textSize="14sp"
                        android:textColor="@color/colorBlack"
                        android:id="@+id/tvEmail"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/email_user"
                        android:fontFamily="@font/roboto_condensed_regular"
                        android:textSize="14sp"
                        android:layout_below="@id/tvNpmUser"
                        android:layout_marginTop="16dp"
                        android:id="@+id/tvEmailUser"
                        android:layout_alignParentRight="true"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Build"
                        android:layout_below="@id/tvEmail"
                        android:layout_marginTop="36dp"
                        android:fontFamily="@font/roboto_condensed_bold"
                        android:textSize="14sp"
                        android:textColor="@color/colorBlack"
                        android:id="@+id/tvBuild"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mei 2019"
                        android:fontFamily="@font/roboto_condensed_regular"
                        android:textSize="14sp"
                        android:layout_below="@id/tvEmailUser"
                        android:layout_marginTop="36dp"
                        android:id="@+id/tvBuildDate"
                        android:layout_alignParentRight="true"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Version"
                        android:layout_below="@id/tvBuild"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/roboto_condensed_bold"
                        android:textSize="14sp"
                        android:textColor="@color/colorBlack"
                        android:id="@+id/tvVersion"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.0"
                        android:fontFamily="@font/roboto_condensed_regular"
                        android:textSize="14sp"
                        android:layout_below="@id/tvBuildDate"
                        android:layout_marginTop="16dp"
                        android:id="@+id/tvVersionNumber"
                        android:layout_alignParentRight="true"/>


            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>